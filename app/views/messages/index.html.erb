<div class="panel panel-default">
  <div class="panel-heading">
    メッセージ一覧
  </div>
    
  <div class="panel-body">
    <% @messages.each do |message| %>
      <span class="label label-info"><%= message.name %></span>
      <%= message.body %>
      <br>
    <% end %>
  </div>
</div>

  <%= form_for(@message, html: {class: "form-horizontal"}) do |f| %>
    <div class="form-group" >
      <label for="name", class="col-sm-1 control-label">名前:</label>
      <div class="col-sm-3">
        <%= f.text_field :name, :id => "name", :class => "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <label for="content"  class="col-sm-1 control-label">内容:</label>
      <div class="col-sm-3">
        <%= f.text_area :body, :maxlength => "40", :size => "30x2", :id => "content", :class => "form-control" %> 
      </div>
    </div>
    
    <div class="form-group">
      <div class="col-sm-offset-1 col-sm-1">
        <%= f.submit class: "btn btn-sm btn-primary" %>
      </div>
    </div>
  <% end %>
